@using u21517208_HW03.Models

@model List<FileModel>

@{
    ViewBag.Title = "Videos";
}

<h2>Videos</h2>

<!--creates space for videos to be uploaded n downloaded n deleted-->

<div class="row">

    @foreach (FileModel file in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <a href="~/Media/Videos/@file.FileName" data-fancybox="gallery" data-caption="@file.FileName">
                    <video width="320" height="240" autoplay muted>
                        <source src="~/Media/Videos/@file.FileName" type="video/mp4" />
                    </video>

                </a>
            </div>

            <table>
                <tr>
                    <td>
                        <!--shows the file name under video-->
                        <p>@file.FileName</p>
                    </td>
                    <td>
                        <button class="btn btn-success">
                            @Html.ActionLink("Download", "Download", new { FileName = file.FileName })
                        </button>
                        <button class="btn btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { FileName = file.FileName })
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>

<script>
    $(document).ready(function ($) {
        $(".gallery a").fancybox();
    });
</script>