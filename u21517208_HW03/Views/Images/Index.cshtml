@model IEnumerable<u21517208_HW03.Models.FileModel>
@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <a href="~/Media/Images/@item.FileName" data-fancybox="gallery" data-caption="@item.FileName">
                    <img src="~/Media/Images/@item.FileName" />
                </a>
            </div>

            <table>
                <tr>
                    <td>
                        <!--shows the file name under picture-->
                        <p>@item.FileName</p>
                    </td>
                    <td>
                        <button class="btn btn-success">
                            @Html.ActionLink("Download", "Download", new { FileName = item.FileName })
                        </button>
                        <button class="btn btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { FileName = item.FileName })
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>

<script>
 $(document).ready(function ($) {
 $(".gallery a").fancybox();
 });
</script>